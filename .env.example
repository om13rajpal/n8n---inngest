# ========================================
# Inngest Configuration
# ========================================

# Required: Inngest signing key for authentication
# Get from: https://app.inngest.com → Settings → Keys
INNGEST_SIGNING_KEY=signkey-prod-your-key-here

# Required: Inngest event key for sending events
INNGEST_EVENT_KEY=your-event-key-here

# Environment (development, staging, production)
INNGEST_ENV=production

# ========================================
# AI Model APIs (if using AI features)
# ========================================

# OpenRouter API (for Claude, GPT-4, etc.)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Perplexity AI API
PERPLEXITY_API_KEY=pplx-your-key-here

# Tavily Search API
TAVILY_API_KEY=tvly-your-key-here

# ========================================
# Databases (if using database integrations)
# ========================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# PostgreSQL / Generic Database
DATABASE_URL=postgresql://user:password@host:5432/database

# ========================================
# External Service APIs
# ========================================

# Google Sheets / Drive
GOOGLE_SHEETS_API_KEY=your-api-key-here
GOOGLE_DRIVE_API_KEY=your-api-key-here

# Airtable
AIRTABLE_API_KEY=patyour-api-key-here

# Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Shopify
SHOPIFY_API_KEY=your-api-key-here
SHOPIFY_API_SECRET=your-api-secret-here

# Notion
NOTION_API_KEY=secret_your-api-key-here

# ========================================
# Application Configuration
# ========================================

# Node environment
NODE_ENV=production

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Application port (if self-hosting)
PORT=3000
